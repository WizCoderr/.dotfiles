# -----------------------------
# General shortcuts
# -----------------------------
alias update='sudo apt update'
alias upgrade='sudo apt upgrade -y'
alias ll='ls -lah'
alias clr='clear'
alias h='history'
alias ..='cd ..'
alias ...='cd ../..'
alias rm='rm -rf'
alias gpu='watch -n 0.5 nvidia-smi'
alias ex='exit'
# -----------------------------
# Git shortcuts
# -----------------------------
alias gs='git status'
alias ga='git add .'
alias gc='git commit -m'
alias gp='git push'
alias gpl='git pull'

# -----------------------------
# Android
# -----------------------------
alias adb='$ANDROID_HOME/platform-tools/adb'
#----------------------------------
# Ollama Shortcuts
#---------------------------------
alias op='ollama pull'
alias or='ollama run'

