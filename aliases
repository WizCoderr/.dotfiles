# -----------------------------
# General shortcuts
# -----------------------------
alias ll='ls -lah'
alias clr='clear'
alias h='history'
alias ..='cd ..'
alias ...='cd ../..'

# -----------------------------
# Git shortcuts
# -----------------------------
alias gs='git status'
alias ga='git add .'
alias gc='git commit -m'
alias gp='git push'
alias gpl='git pull'

# -----------------------------
# Android
# -----------------------------
alias adb='$ANDROID_HOME/platform-tools/adb'